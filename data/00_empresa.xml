<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="VED" model="res.currency">
            <field name="name">VED</field>
            <field name="full_name">Bolívar</field>
            <field name="symbol">Bs.</field>
            <field name="rounding">0.01</field>
            <field name="active" eval="True"/>
            <field name="currency_unit_label">Bolívar</field>
            <field name="currency_subunit_label">Céntimos</field>
        </record>

        <record id="ir_cron_consultar_tasa_bcv" model="ir.cron">
            <field name="name">Consulta la tasa de cambio del día en el BCV</field>
            <field name="model_id" ref="model_caja_tasa"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.consultar_tasa_bcv()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
        </record>

    </data>
</odoo>
